          <div class="danciety-pagination">
          <pagination
          boundary-links="true"
          total-items="40"
          max-size="5"
          items-per-page="getParams.count"
          ng-model="getParams.currentPage"
          class="danciety-pagination__list"
          previous-text="&lsaquo;"
          next-text="&rsaquo;"
          first-text="&laquo;"
          last-text="&raquo;"
          ng-change="changePage();">
          </pagination>
          </div>
