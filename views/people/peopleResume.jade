section.resume-page__about-me.clearfix(ng-show='!editMode', ng-init='editMode = false;')
    .resume-page__container
        .clearfix
            p.resume-page__about-me__title.pull-left О себе
            .resume-page__edit-mode.pull-right(ng-show='user.isMyProfile', ng-click='editMode = true;')
                i.fa.fa-pencil Изменить
        p.resume-page__about-me__text(ng-bind='user.preferences.additionally')
    .resume-page__container
        .resume-page__contacts.clearfix
            .col-md-6.col-sm-6.col-reset(ng-if='user.phone || user.country || user.website || user.city || user.cv_email')
                p.resume-page__about-me__title Контактная информация
                table.resume-page__contacts__table
                    tr
                        th
                            span.resume-page__contacts__label
                                i.fa.fa-phone-square
                            span.resume-page__contacts__text(ng-bind="user.phone || 'не указано'")
                        th
                            span.resume-page__contacts__label Страна
                            span.resume-page__contacts__text(ng-bind="user.country.name || 'не указано'")
                    tr
                        th
                            span.resume-page__contacts__label
                                i.fa.fa-globe
                            span.resume-page__contacts__text(ng-bind="user.website || 'не указано'")
                        th
                            span.resume-page__contacts__label Город
                            span.resume-page__contacts__text(ng-bind="user.city || 'не указано'")
                    tr
                        th
                            span.resume-page__contacts__label
                                i.fa.fa-envelope
                            span.resume-page__contacts__text(ng-bind="user.cv_email || 'не указано'")
                        th
            .col-md-6.col-sm-6.col-reset
                p.resume-page__about-me__title Персональные данные
                table.resume-page__contacts__table
                    tr
                        td
                            span.resume-page__contacts__label Пол
                            span.resume-page__contacts__text(ng-if='user.personalData.male == true') Мужской
                            span.resume-page__contacts__text(ng-if='user.personalData.male !== true') Женский
                        td
                            span.resume-page__contacts__label Параметры
                            span.resume-page__contacts__text(ng-bind="user.personalData.params || 'не указано'")
                    tr
                        td
                            span.resume-page__contacts__label Возраст
                            span.resume-page__contacts__text(ng-bind="user.personalData.age || 'не указано'")
                        td
                            span.resume-page__contacts__label Цвет глаз
                            span.resume-page__contacts__text(ng-bind="user.personalData.eyesColor || 'не указано'")
                    tr
                        td
                            span.resume-page__contacts__label Рост
                            span.resume-page__contacts__text(ng-bind="user.personalData.height + ' см'")
                        td
                            span.resume-page__contacts__label Цвет волос
                            span.resume-page__contacts__text(ng-bind="user.personalData.hairColor || 'не указано'")
                    tr
                        td
                            span.resume-page__contacts__label Вес
                            span.resume-page__contacts__text(ng-bind="user.personalData.weight + ' кг'")
                        td
                            span.resume-page__contacts__label Гражданство
                            span.resume-page__contacts__text(ng-bind="user.personalData.nationality || 'не указано'")
    .resume-page__dance-direction
        .resume-page__container
            p.resume-page__about-me__title Танцевальные направления
            span.dance-direction__text(ng-repeat='style in user.danceStyles', ng-bind='style.name')
    .resume-page__payment
        .resume-page__container
            p.resume-page__about-me__title Оплата
            p(ng-repeat='q in payments')
                span.resume-page__payment__label(ng-bind="q.name + ':'")
                span.resume-page__payment__text(ng-bind='q.price')
                span.resume-page__payment__text USD
